generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Avatar {
  id           String   @id
  name         String
  mobile       String
  password     String
  type         String
  createdAt    DateTime @default(now())
  email        String
  profileImage String
}

model User {
  id       String      @id @default(uuid()) 
  name     String
  age      Int?
  location String?
  gender  String?
  email    String   @unique
  mobile   String      @unique
  password String
  parentId Int?
  parentName String?
  imageUrl String[]  @default([])
  videoUrl String[]   @default([])
  avatarIds String[]  @default([])
  createdAt DateTime @default(now())
}
